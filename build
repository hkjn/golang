#!/bin/bash
set -euo pipefail

DOCKER_USER="hkjn"
DOCKER_IMAGE="golang"

ARCH="$(uname -m)"
BUILD_DIR="$(mktemp -d)"

cp Dockerfile{,.build} "$BUILD_DIR/"
cp *.go "$BUILD_DIR/"
[[ $ARCH = "x86_64" ]] || {
  sed -i "s/FROM hkjn\//FROM hkjn\/$ARCH-/" "$BUILD_DIR/Dockerfile.build"
  sed -i "s/FROM hkjn\//FROM hkjn\/$ARCH-/" "$BUILD_DIR/Dockerfile"
  DOCKER_IMAGE="$ARCH-$DOCKER_IMAGE"
}

TAG="$DOCKER_USER/$DOCKER_IMAGE"
echo "Building $TAG-build in $BUILD_DIR"
docker build -t $TAG-build -f "$BUILD_DIR/Dockerfile.build" "$BUILD_DIR/"
echo "Copying out fs from $TAG-build.."
docker run --rm -it -v $(pwd):/build $TAG-build
cp acme fs "$BUILD_DIR/"
echo "Building $TAG in $BUILD_DIR"
docker build -t $TAG "$BUILD_DIR/"
NO_PUSH=${NO_PUSH:-""}
[[ "$NO_PUSH" ]] || docker push $TAG
